def skip_lines(x):
    for a in range(x):
        print ""
def print_hangman(hangman):
    for x in hangman:
        print x
def validWord(word):
    letters = ["a","b","c","d","e","f","g","h","i","j","k","l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"," "]
    for letter in range(len(word)):
        if word[letter] not in letters:
            return False
    return True
